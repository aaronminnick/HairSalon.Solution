@{
  Layout = "_Layout";
}

@model Salon.Models.Client;

<h2>Add a Client for @ViewBag.StylistName</h2>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId, new {@Value = ViewBag.StylistId})
  @Html.LabelFor(model => model.FirstName, "First Name")
  @Html.TextBoxFor(model => model.FirstName)
  @Html.LabelFor(model => model.LastName, "Last Name")
  @Html.TextBoxFor(model => model.LastName)
  @Html.LabelFor(model => model.PhoneNumber, "Phone Number: ###-###-####")
  @Html.TextBoxFor(model => model.PhoneNumber, new {@type = "tel", @pattern = "[0-9]{3}-[0-9]{3}-[0-9]{4}"})
  <input type="submit" value="Add Client" />
}