@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h2>All Stylists</h2>
<p>Please select a stylist:</p>
<div class="list-div">
@if (Model.Count == 0)
{
  <p>No stylists in database. Please use the link below to add a stylist.</p>
}
else
{
  foreach (Stylist stylist in Model)
  {
    @Html.ActionLink($"{stylist.FirstName} {stylist.LastName}", "Details", new {id = stylist.StylistId})
  }
}
</div>
<p>@Html.ActionLink("Add a Stylist", "Create")</p>