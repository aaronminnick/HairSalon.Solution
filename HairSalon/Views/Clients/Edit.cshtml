@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client;

<h2>Edit Client</h2>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)
  @Html.LabelFor(model => model.FirstName, "First Name")
  @Html.EditorFor(model => model.FirstName)
  @Html.LabelFor(model => model.LastName, "Last Name")
  @Html.EditorFor(model => model.LastName)
  @Html.LabelFor(model => model.PhoneNumber, "Phone Number: ###-###-####")
  @Html.EditorFor(model => model.PhoneNumber, new {@type = "tel", @pattern = "[0-9]{3}-[0-9]{3}-[0-9]{4}"})
  @Html.LabelFor(model => model.StylistId, "Reassign to Stylist:")
  @Html.DropDownList("Stylists")
  <input class="submit-button" type="submit" value="Save Changes" />
}
