@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h2>Client Details:</h2>

<h4>@Model.FirstName @Model.LastName</h4>
<h5>Phone Number: @Model.PhoneNumber</h5>
<h5>Stylist: @Html.ActionLink($"{ViewBag.Stylist.FirstName} {ViewBag.Stylist.LastName}", "Details", "Stylists", new {id = ViewBag.Stylist.StylistId})</h5>
<p>@Html.ActionLink("Edit Client", "Edit", new {id = Model.ClientId})</p>
<p>@Html.ActionLink("Delete Client", "Delete", new {id = Model.ClientId})</p>